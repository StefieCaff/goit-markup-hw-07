.advantages-list {
    display: flex;
}

.advantages__item:not(:last-child) {
    margin-right: 30px;
}

.advantages__item {
    width: 270px
}

.advantages__wrapper {
    display: flex;
    justify-content: center;
    align-items: center;
    width: 270px;
    height: 120px;
    background: var(--sub-background-color);
    border-radius: 4px;
    margin-bottom: 30px;

}

.advantages__heading {
    font-weight: 700;
    line-height: 16px;
    font-size: 14px;
    letter-spacing: 0.03em;
    text-transform: uppercase;
    margin-bottom: 10px;
}

.advantages__text {
    font-weight: 400;
    line-height: 24px;
    font-size: 14px;
    letter-spacing: 0.03em;
    color: var(--sub-color)
}